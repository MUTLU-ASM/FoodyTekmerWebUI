@model FoodyTekmerEntityLayer.Concrete.About
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 style="pointer-events: none; user-select: none;">Ürün Güncelleme Sayfası</h1>
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <form method="post">
                <label>ID</label>
                <input type="text" class="form-control border" asp-for="AboutId" readonly></input>
                <br />
                <label>Adı</label>
                <input type="text" class="form-control border" asp-for="Description"></input>
                <br />
                <label>Görsel Url</label>
                <input type="text" class="form-control border" asp-for="ImageUrl"></input>
                <br />
                <button class="btn btn-info">Ürünü Güncelle</button>
                <a href="/Product/Index" class="btn btn-primary float-right">Vazgeç</a>
            </form>

        </div>
    </div>
</div>