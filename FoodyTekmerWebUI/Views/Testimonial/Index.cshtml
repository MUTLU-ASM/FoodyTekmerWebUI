@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@model IPagedList<FoodyTekmerEntityLayer.Concrete.Testimonial>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<h2 style="pointer-events: none; user-select: none;">-- Yorum Listesi</h2>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Unvan</th>
        <th>Resim</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <th>@x.TestimonialId</th>
            <td>@x.NameSurname</td>
            <td style="width:550px;">@x.Description</td>
            <td>@x.Title</td>
            <td><img style="width:50px; border-radius:50px;" src="@x.ImageUrl" alt="@x.NameSurname" /></td>
            <td><a href="/Testimonial/DeleteTestimonial/@x.TestimonialId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Testimonial/UpdateTestimonial/@x.TestimonialId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<div class="pull-right">
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index",
            new
            {
                page
            }),
            new PagedListRenderOptionsBase
    {
        LiElementClasses = new string[] { "page-item" },
        PageClasses = new string[] { "page-link" },
        Display = PagedListDisplayMode.IfNeeded

    })
</div>
<a href="/Testimonial/CreateTestimonial" class="btn btn-primary">Yeni Yorum Girişi</a>

