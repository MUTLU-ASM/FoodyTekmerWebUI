@model FoodyTekmerEntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1 style="pointer-events: none; user-select: none;">Yorum Güncelleme Sayfası</h1>
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <form method="post">
                <label>ID</label>
                <input type="text" class="form-control border" asp-for="TestimonialId" readonly></input>
                <br />
                <label>Adı</label>
                <input type="text" class="form-control border" asp-for="NameSurname"></input>
                <br />
                <label>Açıklama</label>
                <input type="text" class="form-control border" asp-for="Description"></input>
                <br />
                <label>Unvan</label>
                <input type="text" class="form-control border" asp-for="Title"></input>
                <br />
                <label>Profil Resmi</label>
                <input type="text" class="form-control border" asp-for="ImageUrl"></input>
                <br />
                <button class="btn btn-info">Yorumu Güncelle</button>
                <a href="/Testimonial/Index" class="btn btn-primary float-right">Vazgeç</a>
            </form>
        </div>
    </div>
</div>
