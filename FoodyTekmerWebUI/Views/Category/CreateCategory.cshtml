@model FoodyTekmerEntityLayer.Concrete.Category
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<form method="post">

    <div class="container">

        <h2 style="pointer-events: none; user-select: none;">Kategori Ekleme Sayfası</h2>
        <br />
        <label>Kategori Adını Giriniz</label>
        <br />
        <input type="type" asp-for="CategoryName" class="form-control" />
        <br />
        <button class="btn btn-info">Kategori Ekle</button>
        <a href="/Category/Index" class="btn btn-primary float-right">Vazgeç</a>
    </div>

</form>