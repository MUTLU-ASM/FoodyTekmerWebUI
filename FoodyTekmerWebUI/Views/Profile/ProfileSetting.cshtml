
@{
    ViewData["Title"] = "ProfileSetting";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-wrapper-scroll">

	<!-- Content wrapper start -->
	<div class="content-wrapper">

		<!-- Row start -->
		<div class="row">
			<div class="col-xl-12">
				<!-- Card start -->
				<div class="card">
					<div class="card-body">

						<!-- Row start -->
						<div class="row">
							<div class="col-xxl-12 col-lg-12 col-md-12 col-sm-12 col-12">
								<div class="row">
									<div class="col-sm-6 col-12">
										<div class="d-flex flex-row">
											<img src="/vivo/design/assets/images/user3.png" class="img-fluid change-img-avatar" alt="Image">
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-xxl-4 col-sm-6 col-12">
										<!-- Form Field Start -->
										<div class="mb-3">
											<label for="fullName" class="form-label">Ad Soyad</label>
											<input type="text" class="form-control" id="fullName" placeholder="Ad Soyad">
										</div>
									</div>
									<div class="col-xxl-4 col-sm-6 col-12">
										<!-- Form Field Start -->
										<div class="mb-3">
											<label for="emailID" class="form-label">Mail</label>
											<input type="email" class="form-control" id="emailID" placeholder="reese@gmail.com">
										</div>
									</div>
									<div class="col-xxl-4 col-sm-6 col-12">
										<!-- Form Field Start -->
										<div class="mb-3">
											<label for="phoneNo" class="form-label">Telefon</label>
											<input type="number" class="form-control" id="phoneNo" placeholder="123-456-7890">
										</div>
									</div>
									<div class="col-xxl-4 col-sm-6 col-12">
										<!-- Form Field Start -->
										<div class="mb-3">
											<label for="Country" class="form-label">Ülke</label>
											<input type="text" class="form-control"  placeholder="Türkiye">
										</div>
									</div>
									<div class="col-xxl-4 col-sm-6 col-12">
										<!-- Form Field Start -->
										<div class="mb-3">
											<label for="enterPassword" class="form-label">Şifre</label>
											<input type="password" class="form-control" id="enterPassword"
												   placeholder="Şifre">
										</div>
									</div>
									<div class="col-xxl-4 col-sm-6 col-12">
										<!-- Form Field Start -->
										<div class="mb-3">
											<label for="enterPassword" class="form-label">Resim</label>
											<input type="password" class="form-control" id="enterPassword"
												   placeholder="Resim">
										</div>
									</div>
								</div>
							</div>
							<div class="col-sm-12 col-12">
								<hr>
								<button class="btn btn-info">Ayarları Kaydet</button>
							</div>
						</div>
						<!-- Row end -->

					</div>
				</div>
				<!-- Card end -->
			</div>
		</div>
		<!-- Row end -->

	</div>
	<!-- Content wrapper end -->
