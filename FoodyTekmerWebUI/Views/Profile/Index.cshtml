@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row gutters">
    <div class="col-sm-12 col-12">
        <div class="profile-header">
            <h1>Hoşgeldin, Asım</h1>
            <div class="profile-header-content">
                <div class="profile-header-tiles">
                    <div class="row gutters">
                        <div class="col-sm-4 col-12">
                            <div class="profile-tile">
                                <span class="icon">
                                    <i class="bi bi-pentagon"></i>
                                </span>
                                <h6>Ad Soyad - <span>Asım Mutlu</span></h6>
                            </div>
                        </div>
                        <div class="col-sm-4 col-12">
                            <div class="profile-tile">
                                <span class="icon">
                                    <i class="bi bi-pin-angle"></i>
                                </span>
                                <h6>Lokasyon - <span>Türkiye</span></h6>
                            </div>
                        </div>
                        <div class="col-sm-4 col-12">
                            <div class="profile-tile">
                                <span class="icon">
                                    <i class="bi bi-telephone"></i>
                                </span>
                                <h6>Telefon - <span>1234567890</span></h6>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="profile-avatar-tile">
                    <img src="~/foody2-1.0.0/img/testimonial-2.jpg" class="img-fluid"
                         alt="Bootstrap Gallery" />
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row gutters">
    <div class="col-lg-8 col-sm-12 col-8">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Not Listesi</div>
            </div>
            <div class="card-body">
                <div class="create-offer-container">
                    <textarea class="form-control" rows="3">Merhaba,</textarea>
                    <div class="share-thoughts-footer">
                        <div class="share-icons">
                            <a href="#">
                                <i class="bi bi-pin-map"></i>
                            </a>
                            <a href="#">
                                <i class="bi bi-link-45deg"></i>
                            </a>
                            <a href="#">
                                <i class="bi bi-camera"></i>
                            </a>
                            <a href="#">
                                <i class="bi bi-check-circle"></i>
                            </a>
                        </div>
                        <button class="btn btn-info btn-sm">Listeye Ekle</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4 col-sm-12 col-12">
        <div class="row gutters">
            <div class="col-sm-6 col-12">
                <div class="award-tile shade-green">
                    <div class="award-icon">
                        <i class="bi bi-receipt"></i>
                    </div>
                    <h3>15</h3>
                    <h4>Ürünler</h4>
                </div>
            </div>
            <div class="col-sm-6 col-12">
                <div class="award-tile shade-blue">
                    <div class="award-icon">
                        <i class="bi bi-gem"></i>
                    </div>
                    <h3>7</h3>
                    <h4>Kategoriler</h4>
                </div>
            </div>
        </div>
    </div>
</div>